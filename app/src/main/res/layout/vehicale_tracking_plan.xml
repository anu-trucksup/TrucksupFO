<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/my_load_wight_bg"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_10sdp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_12sdp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vehicleTracking"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_toRightOf="@+id/postBack"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/bai_jamjuree_semi_bold"
            android:gravity="center_vertical"
            android:textColor="@color/blue"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/info_information_icon_16"
            android:tint="@color/blue"
            android:layout_marginEnd="@dimen/_3sdp"
            android:id="@+id/info"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@color/transparent"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_toRightOf="@id/planName"
            tools:ignore="UseAppTint" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/tracking_plan_items"
        tools:itemCount="1"
        android:id="@+id/planList"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        app:cardBackgroundColor="@color/blue"
        android:layout_centerHorizontal="true"
        android:id="@+id/cardCount"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_2sdp"
        app:strokeColor="@color/blue"
        app:strokeWidth="@dimen/_1sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:paddingHorizontal="@dimen/_20sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:id="@+id/next"
            android:text="@string/continu_main"
            android:tag="y"
            android:fontFamily="@font/bai_jamjuree_medium"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"/>
    </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</LinearLayout>

</RelativeLayout>