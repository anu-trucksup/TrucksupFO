<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.trucksup.field_officer.presenter.view.activity.auth.login.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#083E2089"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context=".view.login.LoginActivity"
        tools:ignore="ExtraText">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                //top View

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_back_arrow_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/rectangle_bg" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_80sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/trucksup_logo" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_job_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_18sdp"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp25"
                            android:orientation="vertical"
                            tools:visibility="visible">

                            <TextView
                                style="@style/title_semi_25"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="@string/welcome_back"
                                tools:text="Welcome Back" />


                            <TextView
                                style="@style/text12medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="@string/get_started_with_sign" />


                            <LinearLayout
                                android:id="@+id/phone_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp20"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <TextView
                                    style="@style/edit_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dp5"
                                    android:text="@string/mobile_number"
                                    tools:text="@string/mobile_number" />

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_32sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="@dimen/_8sdp"
                                    app:cardElevation="0dp"
                                    app:strokeColor="@color/blue"
                                    app:strokeWidth="@dimen/_1sdp">

                                    <EditText
                                        android:id="@+id/phone_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/edit_box"
                                        style="@style/edit_text_m"
                                        android:hint="@string/mobile_number"
                                        android:inputType="phone"
                                        android:paddingHorizontal="@dimen/_10sdp"
                                        android:maxLength="10" />
                                </com.google.android.material.card.MaterialCardView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp12"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/edit_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dp5"
                                    android:text="@string/password" />



                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_32sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="@dimen/_8sdp"
                                    app:cardElevation="0dp"
                                    app:strokeColor="@color/blue"
                                    app:strokeWidth="@dimen/_1sdp">

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        app:boxBackgroundMode="none"
                                        app:boxCornerRadiusBottomEnd="@dimen/dp10"
                                        app:boxCornerRadiusBottomStart="@dimen/dp10"
                                        app:boxCornerRadiusTopEnd="@dimen/dp10"
                                        app:boxCornerRadiusTopStart="@dimen/dp10"
                                        app:endIconDrawable="@drawable/custom_eye_drawable"
                                        app:hintAnimationEnabled="false"
                                        app:hintEnabled="false"
                                        app:passwordToggleEnabled="true"
                                        app:passwordToggleTint="@color/black">

                                        <EditText
                                            android:id="@+id/password_txt"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/edit_box"
                                            android:inputType="textPassword"
                                            android:drawableStart="@drawable/locked"
                                            android:maxLines="1"
                                            style="@style/edit_text_m"
                                            android:hint="@string/password"
                                            android:drawablePadding="@dimen/_2sdp"
                                            android:padding="@dimen/dp5" />

                                    </com.google.android.material.textfield.TextInputLayout>
                                   <!-- <EditText
                                        android:id="@+id/password_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/edit_box"
                                        android:fontFamily="@font/bai_jamjuree_medium"
                                        android:hint="@string/password"
                                        android:inputType="textPassword"
                                        android:paddingLeft="@dimen/_10sdp"
                                        android:textColor="@color/secondry_text"
                                        android:textColorHint="@color/secondry_text"
                                        android:textSize="@dimen/_12sdp" />-->
                                </com.google.android.material.card.MaterialCardView>

                                 </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_36sdp"
                                android:orientation="horizontal">


                                <CheckBox
                                    android:id="@+id/rb_remember"
                                    style="@style/text_light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/remember_me"
                                    android:textColor="@color/text_grey" />


                                <TextView
                                    android:id="@+id/forget_password_txt"
                                    style="@style/text_light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:text="@string/forgot_password" />
                            </RelativeLayout>


                            <TextView
                                android:id="@+id/login_btn"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:background="@drawable/background_1_1"
                                android:fontFamily="@font/bai_jamjuree_semi_bold"
                                android:gravity="center"
                                android:paddingVertical="@dimen/_6sdp"
                                android:text="@string/log_in"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_margin="@dimen/_18sdp"
                        android:shadowColor="@color/blue"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">

                        //bottom text

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/text14medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/don_t_have_an_account" />

                            <TextView
                                android:id="@+id/create_account_txt"
                                style="@style/label_semi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp5"
                                android:gravity="center"
                                android:text="@string/sign_up_here"
                                android:textColor="@color/blue" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>