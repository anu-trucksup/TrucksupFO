<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_8sdp"
    app:strokeColor="#B6B3B1"
    app:strokeWidth="@dimen/_1sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_10ssp"
        android:paddingVertical="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/dl_number_icon" />

                <TextView
                    android:id="@+id/tvDlNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bai_jamjuree_semi_bold"
                    android:maxLines="1"
                    android:text="UP37 20130006294"
                    android:textColor="#6A6A6A"
                    android:textSize="@dimen/_11ssp" />

                <!--                <ImageView-->
                <!--                    android:id="@+id/verifyImg"-->
                <!--                    android:layout_width="@dimen/_25sdp"-->
                <!--                    android:layout_height="@dimen/_25sdp"-->
                <!--                    android:src="@drawable/verified_icon"-->
                <!--                    android:paddingBottom="@dimen/_8sdp"-->
                <!--                    android:paddingHorizontal="@dimen/_6sdp"/>-->

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bai_jamjuree_semi_bold"
                android:maxLines="1"
                android:text="@string/dl_name"
                android:textColor="#6A6A6A"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/tvOwnerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bai_jamjuree_semi_bold"
                android:maxLines="1"
                android:text="RAHUL SHARMA"
                android:textColor="#3E2089"
                android:textSize="@dimen/_9ssp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_weight="1.3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bai_jamjuree_semi_bold"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="03-09-2024 4:51 PM"
                    android:textColor="#989898"
                    android:textSize="@dimen/_10ssp" />

                <ImageView
                    android:id="@+id/btnShare"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/share_round"
                    android:paddingHorizontal="@dimen/_2sdp"
                    android:paddingVertical="@dimen/_5sdp"
                    android:src="@drawable/share_1"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bai_jamjuree_semi_bold"
                android:maxLines="1"
                android:text="@string/licence_expiry_date"
                android:textColor="#6A6A6A"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/tvLicenceED"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bai_jamjuree_semi_bold"
                android:maxLines="1"
                android:text="DD/MM/YYYY"
                android:textColor="#3E2089"
                android:textSize="@dimen/_9ssp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>