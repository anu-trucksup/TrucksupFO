<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/subscribation_card_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/sub_unslect_card"
            android:layout_margin="@dimen/_1sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:fontFamily="@font/bai_jamjuree_semi_bold"
                        android:text="Platinum Plan Benefits"
                        android:textColor="@color/primery_text"
                        android:id="@+id/planName"
                        android:textSize="@dimen/_11sdp" />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/info_information_icon_16"
                        android:tint="@color/black"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:id="@+id/info"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@color/transparent"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_toRightOf="@id/planName"
                        tools:ignore="UseAppTint" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone"
                        android:id="@+id/addButtonLay"
                        android:background="@drawable/checkout_add_bt"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/add"
                            android:id="@+id/addBut"
                            android:gravity="center"
                            android:fontFamily="@font/bai_jamjuree_semi_bold"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#870583"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:visibility="visible"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/calculateLayout"
                        android:background="@drawable/chekout_counter_bg"
                        android:orientation="horizontal">
                        <ImageButton
                            android:layout_width="18dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/minus_icon_16"
                            android:tint="@color/white"
                            android:id="@+id/minus"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@color/transparent"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="30"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:id="@+id/counter"
                            android:fontFamily="@font/bai_jamjuree_semi_bold"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/white"/>
                        <ImageButton
                            android:layout_width="18dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/add_plus_icon_16"
                            android:tint="@color/white"
                            android:id="@+id/pluse"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:background="@color/transparent"
                            tools:ignore="UseAppTint" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:text="@string/days"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:id="@+id/units"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1.5">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Rs 10 per day"
                        android:gravity="center_vertical"
                        android:id="@+id/dayOfPrice"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:gravity="center"
                        android:id="@+id/amount"
                        android:fontFamily="@font/bai_jamjuree_semi_bold"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/blue"/>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_vertical"
                android:id="@+id/remaningVehical"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp"
                android:layout_weight="1"
                android:fontFamily="@font/bai_jamjuree_semi_bold"
                android:textColor="#870583"/>
    </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>