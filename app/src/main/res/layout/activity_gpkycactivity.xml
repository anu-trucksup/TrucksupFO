<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect_header_profile"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:background="@drawable/circal_weight"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_back_icon" />

            <TextView
                style="@style/title_basicreg_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/new_onboarding"
                android:textColor="@color/white" />
        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_4sdp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear"
                tools:context=".activity.BAFollowUpActivity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_32sdp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/kyc_selection_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_label_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/CompleteInstantKYC" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/cbSkipKyc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bai_jamjuree_medium"
                                android:text="@string/SkipKyc"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/_12ssp"
                                app:buttonTint="@color/dark_gray" />
                        </LinearLayout>

                        <TextView
                            style="@style/text_label_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_10ssp"
                            android:text="@string/SkipAadhaarItspaperless" />

                        <LinearLayout
                            android:id="@+id/cardContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/kyc_submitted_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/kyc_submitted_title"
                            style="@style/page_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:drawablePadding="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="@string/process_adhar"
                            android:textColor="@color/purple" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_16sdp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/bottomCard"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias=".7"
                                app:cardBackgroundColor="@color/light_blue_1">

                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="10dp"
                                app:layout_constraintBottom_toTopOf="@id/bottomCard"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/bottomCard">

                                <ImageView
                                    android:id="@+id/kyc_submitted_image"
                                    android:layout_width="@dimen/_80sdp"
                                    android:layout_height="@dimen/_80sdp"
                                    android:scaleType="fitXY"
                                    android:background="@drawable/ic_profile"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/textView5"
                                style="@style/text_label_black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10ssp"
                                android:gravity="center"
                                android:text="@string/selfie_identity"
                                android:textAlignment="center"
                                android:elevation="@dimen/_8sdp"
                                app:layout_constraintEnd_toEndOf="@+id/cardView"
                                app:layout_constraintStart_toStartOf="@+id/cardView"
                                app:layout_constraintTop_toBottomOf="@+id/cardView" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="@dimen/_8sdp"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="@+id/bottomCard">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginBottom="@dimen/_8sdp"
                                    android:background="@color/cir_gray" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom"
                                    android:gravity="bottom"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/_6sdp"
                                    android:weightSum="2">

                                    <ImageView
                                        android:id="@+id/icon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:src="@drawable/ic_attach_file" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_marginRight="@dimen/_8sdp"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:weightSum="2">

                                        <TextView
                                            style="@style/label_15"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical"
                                            android:text="@string/selfie_yourself"
                                            android:textSize="@dimen/_11sdp" />

                                        <TextView
                                            android:id="@+id/title"
                                            style="@style/text_label"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical"
                                            android:text="@string/upload"
                                            android:textColor="@color/dark_gray" />

                                    </LinearLayout>


                                </LinearLayout>
                            </LinearLayout>





                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:id="@+id/pan_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="@dimen/_10sdp">

                            <EditText
                                android:id="@+id/voterIdEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter Voter ID"
                                android:maxLength="10"
                                android:inputType="text"
                                android:importantForAutofill="no"
                                android:autofillHints=""
                                android:singleLine="true"
                                style="@style/edit_text_m"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/edit_box"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_4sdp"/>

                            <TextView
                                style="@style/label_15"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="@string/PANNumber" />

                            <EditText
                                android:id="@+id/txt_pan"
                                style="@style/edit_text_m"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/edit_box"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_4sdp"
                                android:singleLine="true"
                                android:text=""
                                android:hint="@string/PANNumber"/>

                            <TextView
                                style="@style/label_15"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="@string/Name" />

                            <EditText
                                android:id="@+id/txt_name"
                                style="@style/edit_text_m"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/edit_box"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_4sdp"
                                android:singleLine="true"
                                android:text=""
                                android:hint="@string/Name"/>

                            <TextView
                                style="@style/label_15"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="@string/enter_DOB" />

                            <EditText
                                style="@style/edit_text_m"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/edit_box"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_4sdp"
                                android:singleLine="true"
                                android:text=""
                                android:hint="@string/selectDOB"
                                android:editable="false"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/adhar_no_lay"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/EnterAadhaarNumber"
                                style="@style/label_15"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_7sdp"/>

                            <com.chaos.view.PinView
                                android:id="@+id/pinview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:itemCount="12"
                                app:itemWidth="22dp"
                                app:itemHeight="22dp"
                                android:gravity="start"
                                android:lineSpacingExtra="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_16sdp"
                                android:itemBackground="@color/white"
                                android:layout_gravity="center"
                                android:inputType="number"
                                android:cursorVisible="true"
                                app:hideLineWhenFilled="false"
                                app:itemRadius="2dp"
                                app:lineWidth="1dp"
                                android:textSize="@dimen/_10ssp"
                                app:lineColor="@color/gray10"
                                app:itemSpacing="@dimen/_4sdp"
                                style="@style/PinWidget.PinView"
                                android:textColor="@color/black">
                            </com.chaos.view.PinView>



                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_32sdp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/kyc_submitted_procceed_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_1_1"
                                android:fontFamily="@font/bai_jamjuree_medium"
                                android:gravity="center"
                                android:lines="1"
                                android:paddingHorizontal="@dimen/_25sdp"
                                android:paddingVertical="@dimen/_2sdp"
                                android:text="@string/proceed"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/kyc_verified_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/text_label_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/CompleteInstantKYC" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:background="@drawable/ic_tick"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                style="@style/label_15"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_6sdp"
                                android:text="@string/kyc_verified"
                                android:textColor="@color/green"/>
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp">
                            <FrameLayout
                                android:layout_marginTop="@dimen/_40sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="@dimen/_18sdp"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardElevation="@dimen/_8sdp"
                                    android:padding="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_32sdp">

                                    <ImageView
                                        android:layout_width="@dimen/_120sdp"
                                        android:layout_height="@dimen/_120sdp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/ic_verified_tick"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:padding="@dimen/_12sdp"
                                        android:layout_marginTop="@dimen/_60ssp"
                                        app:layout_constraintEnd_toEndOf="@+id/kyc_verified_cardView"
                                        app:layout_constraintStart_toStartOf="@+id/kyc_verified_cardView"
                                        app:layout_constraintTop_toBottomOf="@+id/kyc_verified_cardView" >


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <TextView
                                                    style="@style/text_label_black"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:gravity="start"
                                                    android:text="@string/name_kyc"
                                                    android:textSize="@dimen/_13ssp"
                                                    android:textColor="@color/light_gray_8"/>

                                                <TextView
                                                    android:id="@+id/kyc_verified_name"
                                                    style="@style/text_label_black"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:gravity="start"
                                                    android:text="@string/name_kyc"
                                                    android:textSize="@dimen/_13ssp"
                                                    android:textColor="@color/colorPrimary"/>

                                            </LinearLayout>
                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:layout_marginTop="@dimen/_8sdp"
                                                android:layout_marginBottom="@dimen/_8sdp"
                                                android:background="@color/cir_gray"
                                                
                                                />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <TextView
                                                    style="@style/text_label_black"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:gravity="start"
                                                    android:text="@string/aadhar_number"
                                                    android:textSize="@dimen/_13ssp"
                                                    android:textColor="@color/light_gray_8"/>

                                                <TextView
                                                    android:id="@+id/kyc_verified_aadhar"
                                                    style="@style/text_label_black"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:gravity="start"
                                                    android:text="@string/aadhar_number"
                                                    android:textSize="@dimen/_13ssp"
                                                    android:textColor="@color/colorPrimary"/>

                                            </LinearLayout>
                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:layout_marginBottom="@dimen/_8sdp"
                                                android:layout_marginRight="@dimen/_16sdp"
                                                android:background="@color/cir_gray"
                                                
                                                />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <TextView
                                                    style="@style/text_label_black"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:gravity="start"
                                                    android:text="@string/address2"
                                                    android:textSize="@dimen/_13ssp"
                                                    android:textColor="@color/light_gray_8"/>

                                                <TextView
                                                    android:id="@+id/kyc_verified_address"
                                                    style="@style/text_label_black"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:gravity="start"
                                                    android:text="@string/address2"
                                                    android:textSize="@dimen/_13ssp"
                                                    android:textColor="@color/colorPrimary"/>

                                            </LinearLayout>
                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:layout_marginBottom="@dimen/_8sdp"
                                                android:layout_marginTop="@dimen/_8sdp"
                                                android:background="@color/cir_gray"
                                                 />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <TextView
                                                    style="@style/text_label_black"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:gravity="start"
                                                    android:text="@string/city_"
                                                    android:textSize="@dimen/_13ssp"
                                                    android:textColor="@color/light_gray_8"/>

                                                <TextView
                                                    android:id="@+id/kyc_verified_city"
                                                    style="@style/text_label_black"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:gravity="start"
                                                    android:text="@string/city_"
                                                    android:textSize="@dimen/_13ssp"
                                                    android:textColor="@color/colorPrimary"/>

                                            </LinearLayout>
                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:layout_marginBottom="@dimen/_8sdp"
                                                android:layout_marginTop="@dimen/_8sdp"
                                                android:background="@color/cir_gray"
                                                />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal"
                                                android:layout_marginBottom="@dimen/_16sdp">

                                                <TextView
                                                    style="@style/text_label_black"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:gravity="start"
                                                    android:text="@string/state2"
                                                    android:textSize="@dimen/_13ssp"
                                                    android:textColor="@color/light_gray_8"/>

                                                <TextView
                                                    android:id="@+id/kyc_verified_state"
                                                    style="@style/text_label_black"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:gravity="start"
                                                    android:text="@string/state2"
                                                    android:textSize="@dimen/_13ssp"
                                                    android:textColor="@color/colorPrimary"/>

                                            </LinearLayout>

                                        </LinearLayout>


                                    </LinearLayout>
                                </com.google.android.material.card.MaterialCardView>
                            </FrameLayout>
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                app:civ_border_width="@dimen/_2sdp"
                                app:civ_border_color="@color/light_green_1"
                                android:elevation="@dimen/_8sdp"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/kyc_verified_image"
                                android:src="@drawable/ic_profile"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_32sdp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/kyc_verified_continue_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_1_1"
                                android:fontFamily="@font/bai_jamjuree_medium"
                                android:gravity="center"
                                android:lines="1"
                                android:paddingHorizontal="@dimen/_25sdp"
                                android:paddingVertical="@dimen/_2sdp"
                                android:text="@string/continu_main"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp" />

                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>