<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect_header_profile"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/circal_weight"
                android:layout_centerVertical="true"
                android:padding="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:src="@drawable/ic_back_icon" />

            <TextView
                style="@style/title_basicreg_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:text="My Teams" />
        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_4sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_24sdp">

                <LinearLayout
                    android:id="@+id/mr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_lay"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:elevation="@dimen/_8sdp"
                        android:background="@drawable/roal_slect_card"
                        android:orientation="vertical">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_8sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/feature_selection_bg"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:id="@+id/owner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:onClick="clickOnTS"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/bai_jamjuree_medium"
                                            android:layout_gravity="center"
                                            android:text="@string/truckSupplier"
                                            android:textColor="@color/primery_text"
                                            android:textSize="@dimen/_15ssp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_16sdp"
                                            android:fontFamily="@font/bai_jamjuree_medium"
                                            android:text="30"
                                            android:layout_gravity="center"
                                            android:layout_marginEnd="@dimen/_5sdp"
                                            android:layout_marginBottom="@dimen/_5sdp"
                                            android:textColor="@color/blue"
                                            android:textSize="@dimen/_16ssp" />


                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2.3"
                                        android:orientation="horizontal"
                                        android:paddingStart="@dimen/_10sdp">

                                        <ImageView
                                            android:layout_width="100dp"
                                            android:layout_height="73dp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:background="#00000000"
                                            android:src="@drawable/tw" />

                                    </RelativeLayout>


                                </LinearLayout>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_8sdp">

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/feature_selection_bg"
                                android:clickable="true"
                                android:onClick="slectBroker"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:id="@+id/broker"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:onClick="clickOnBA"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/bai_jamjuree_medium"
                                            android:layout_gravity="center"
                                            android:text="@string/broker_new"
                                            android:textColor="@color/primery_text"
                                            android:textSize="@dimen/_15ssp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="@dimen/_5sdp"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/bai_jamjuree_medium"
                                            android:text="30"
                                            android:textColor="@color/blue"
                                            android:textSize="@dimen/_16ssp" />


                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2.3"
                                        android:orientation="horizontal"
                                        android:paddingStart="@dimen/_10sdp">

                                        <ImageView
                                            android:layout_width="80dp"
                                            android:layout_height="71dp"
                                            android:scaleType="fitXY"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_marginEnd="@dimen/_4sdp"
                                            android:background="#00000000"
                                            android:src="@drawable/ba_ic" />

                                    </RelativeLayout>

                                </LinearLayout>


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_8sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/tru_hub_menu_bg"
                                android:clickable="true"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:id="@+id/buyerSellor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/feature_selection_bg"
                                    android:onClick="clickOnGP"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/bai_jamjuree_medium"
                                            android:gravity="center_vertical"
                                            android:layout_gravity="center"
                                            android:text="@string/growthpartner"
                                            android:textColor="@color/primery_text"
                                            android:textSize="@dimen/_15ssp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/bai_jamjuree_regular"
                                            android:text="30"
                                            android:layout_marginBottom="@dimen/_5sdp"
                                            android:textColor="@color/blue"
                                            android:textSize="@dimen/_16ssp" />


                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:layout_weight="2.3"
                                        android:orientation="horizontal"
                                        android:paddingStart="@dimen/_10sdp">

                                        <ImageView
                                            android:layout_width="70dp"
                                            android:layout_height="70dp"
                                            android:scaleType="fitXY"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_marginEnd="@dimen/_4sdp"
                                            android:background="#00000000"
                                            android:src="@drawable/growth_part" />

                                    </RelativeLayout>

                                </LinearLayout>


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>