<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_20sdp"
        android:background="@drawable/alert_box_bg"
        android:layout_margin="@dimen/_12sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/bai_jamjuree_medium"
            android:text="@string/please_confirm_the_date_and_time"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_6sdp"
            style="@style/text_medium"
            android:text="Date: 20-Feb-25"
            android:textColor="@color/dark_gray"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:text="Time: 09:00 AM"
            style="@style/text_medium"
            android:textColor="@color/dark_gray"/>



        <TextView
            android:id="@+id/confirm"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/background_1_1"
            android:fontFamily="@font/bai_jamjuree_semi_bold"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/cancle"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/bai_jamjuree_semi_bold"
            android:gravity="center"
            android:text="@string/cancel_u"
            android:textColor="@color/blue"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

</RelativeLayout>