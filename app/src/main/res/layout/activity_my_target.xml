<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect_header_profile"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/circal_weight"
                android:layout_centerVertical="true"
                android:padding="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/ic_back_icon" />

            <TextView
                style="@style/title_basicreg_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:text="@string/target" />
        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_4sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_8sdp">

                <LinearLayout
                    android:id="@+id/mr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_lay"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:elevation="@dimen/_8sdp"
                        android:background="@drawable/roal_slect_card"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/bai_jamjuree_medium"
                            android:gravity="start"
                            android:text="@string/definedtarget"
                            android:textAlignment="textStart"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/_12ssp" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_8sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/tru_hub_menu_bg"
                                android:orientation="vertical">


                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/owner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:cardCornerRadius="@dimen/_12sdp"
                                    app:strokeColor="@color/ora_dark"
                                    app:strokeWidth="1dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:padding="@dimen/_8sdp"
                                        android:background="@color/ora_light">

                                        <ImageView
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:padding="@dimen/_4sdp"
                                            android:background="#00000000"
                                            android:src="@drawable/tw" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/bai_jamjuree_semi_bold"
                                            android:layout_gravity="center"
                                            android:text="@string/add_load"
                                            android:textColor="@color/blue"
                                            android:textSize="@dimen/_16ssp"
                                            android:layout_marginLeft="@dimen/_6sdp"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_16sdp"
                                            android:fontFamily="@font/bai_jamjuree_medium"
                                            android:text="30"
                                            android:gravity="end"
                                            android:textAlignment="gravity"
                                            android:layout_gravity="center_vertical"
                                            android:textColor="@color/blue"
                                            android:textSize="@dimen/_12ssp"
                                            android:layout_marginRight="@dimen/_12sdp"/>


                                    </LinearLayout>

                                </com.google.android.material.card.MaterialCardView>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:strokeColor="@color/ora_dark"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:background="@color/ora_light"
                                android:padding="@dimen/_8sdp">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:padding="@dimen/_4sdp"
                                    android:src="@drawable/onboarding"
                                    android:layout_gravity="top"
                                    android:background="@color/ora_light"
                                    android:layout_marginHorizontal="@dimen/_4sdp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/ora_light"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="@dimen/_6sdp">

                                    <TextView
                                        style="@style/label_semi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:text="@string/Onboardings"
                                        android:fontFamily="@font/bai_jamjuree_semi_bold"
                                        android:textAlignment="textStart"
                                        android:textSize="@dimen/_16sdp"
                                        />

                                    <LinearLayout
                                        android:id="@+id/broker"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:layout_marginEnd="@dimen/_12sdp">

                                            <TextView
                                                style="@style/regular_text_12"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:text="@string/truckSupplier"
                                                android:textColor="@color/primery_text"
                                                android:fontFamily="@font/bai_jamjuree_semi_bold"
                                                />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="end"
                                                android:gravity="end"
                                                android:textAlignment="textEnd"
                                                android:fontFamily="@font/bai_jamjuree_medium"
                                                android:text="30"
                                                android:textColor="@color/blue"
                                                android:textSize="@dimen/_12ssp" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:layout_marginEnd="@dimen/_12sdp">

                                            <TextView
                                                style="@style/regular_text_12"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:text="@string/broker_new"
                                                android:textColor="@color/primery_text"
                                                android:fontFamily="@font/bai_jamjuree_semi_bold"
                                                />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="end"
                                                android:gravity="end"
                                                android:textAlignment="textEnd"
                                                android:fontFamily="@font/bai_jamjuree_medium"
                                                android:text="30"
                                                android:textColor="@color/blue"
                                                android:textSize="@dimen/_12ssp" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:layout_marginEnd="@dimen/_12sdp">

                                            <TextView
                                                style="@style/regular_text_12"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:text="@string/growthpartner"
                                                android:textColor="@color/primery_text"
                                                android:fontFamily="@font/bai_jamjuree_semi_bold"
                                                />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="end"
                                                android:gravity="end"
                                                android:textAlignment="textEnd"
                                                android:fontFamily="@font/bai_jamjuree_medium"
                                                android:text="30"
                                                android:textColor="@color/blue"
                                                android:textSize="@dimen/_12ssp" />


                                        </LinearLayout>

                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>


                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:strokeColor="@color/ora_dark"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:background="@color/ora_light"
                                android:padding="@dimen/_8sdp">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:padding="@dimen/_4sdp"
                                    android:src="@drawable/vas_services"
                                    android:layout_gravity="top"
                                    android:background="@color/ora_light"
                                    android:layout_marginHorizontal="@dimen/_4sdp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/ora_light"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="@dimen/_6sdp">


                                    <TextView
                                        style="@style/label_semi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:text="@string/vas"
                                        android:fontFamily="@font/bai_jamjuree_semi_bold"
                                        android:textAlignment="textStart"
                                        android:textSize="@dimen/_16sdp"
                                        />

                                    <LinearLayout
                                        android:id="@+id/vasBroker"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:layout_marginEnd="@dimen/_12sdp">

                                            <TextView
                                                style="@style/regular_text_12"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:text="@string/vehicle_tracking"
                                                android:textColor="@color/primery_text"
                                                android:fontFamily="@font/bai_jamjuree_semi_bold"
                                                />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="end"
                                                android:gravity="end"
                                                android:textAlignment="textEnd"
                                                android:fontFamily="@font/bai_jamjuree_medium"
                                                android:text="30"
                                                android:textColor="@color/blue"
                                                android:textSize="@dimen/_12ssp" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:layout_marginEnd="@dimen/_12sdp">

                                            <TextView
                                                style="@style/regular_text_12"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:text="@string/vehicle_verify"
                                                android:textColor="@color/primery_text"
                                                android:fontFamily="@font/bai_jamjuree_semi_bold"
                                                />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="end"
                                                android:gravity="end"
                                                android:textAlignment="textEnd"
                                                android:fontFamily="@font/bai_jamjuree_medium"
                                                android:text="30"
                                                android:textColor="@color/blue"
                                                android:textSize="@dimen/_12ssp" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:layout_marginEnd="@dimen/_12sdp">

                                            <TextView
                                                style="@style/regular_text_12"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:text="@string/verify_dl"
                                                android:textColor="@color/primery_text"
                                                android:fontFamily="@font/bai_jamjuree_semi_bold"
                                                />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="end"
                                                android:gravity="end"
                                                android:textAlignment="textEnd"
                                                android:fontFamily="@font/bai_jamjuree_medium"
                                                android:text="30"
                                                android:textColor="@color/blue"
                                                android:textSize="@dimen/_12ssp" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:layout_marginEnd="@dimen/_12sdp">

                                            <TextView
                                                style="@style/regular_text_12"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:text="@string/insurance"
                                                android:textColor="@color/primery_text"
                                                android:fontFamily="@font/bai_jamjuree_semi_bold"
                                                />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="end"
                                                android:gravity="end"
                                                android:textAlignment="textEnd"
                                                android:fontFamily="@font/bai_jamjuree_medium"
                                                android:text="30"
                                                android:textColor="@color/blue"
                                                android:textSize="@dimen/_12ssp" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:layout_marginEnd="@dimen/_12sdp">

                                            <TextView
                                                style="@style/regular_text_12"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:text="@string/finance"
                                                android:textColor="@color/primery_text"
                                                android:fontFamily="@font/bai_jamjuree_semi_bold"
                                                />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="end"
                                                android:gravity="end"
                                                android:textAlignment="textEnd"
                                                android:fontFamily="@font/bai_jamjuree_medium"
                                                android:text="30"
                                                android:textColor="@color/blue"
                                                android:textSize="@dimen/_12ssp" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:layout_marginEnd="@dimen/_12sdp">

                                            <TextView
                                                style="@style/regular_text_12"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:text="@string/smart_fuel"
                                                android:textColor="@color/primery_text"
                                                android:fontFamily="@font/bai_jamjuree_semi_bold"
                                                />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="end"
                                                android:gravity="end"
                                                android:textAlignment="textEnd"
                                                android:fontFamily="@font/bai_jamjuree_medium"
                                                android:text="30"
                                                android:textColor="@color/blue"
                                                android:textSize="@dimen/_12ssp" />


                                        </LinearLayout>

                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>