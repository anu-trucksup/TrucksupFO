<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect_header_profile"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_75sdp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/circal_weight"
                android:layout_centerVertical="true"
                android:padding="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/ic_back_icon" />

            <TextView
                android:id="@+id/title_p"
                style="@style/title_basicreg_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_12sdp"
                android:textColor="@color/white"
                android:text="@string/profile" />

            <TextView
                android:id="@+id/version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Version: 1.0.0"
                android:layout_below="@+id/title_p"
                style="@style/title_basicreg_18"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_4sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_24sdp">

                <LinearLayout
                    android:id="@+id/mr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_lay"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="@dimen/_8sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:padding="@dimen/_4ssp"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_profile_"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:src="@drawable/profile"
                                    app:civ_border_color="@color/blue"
                                    app:civ_border_width="@dimen/_1sdp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_16sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/_nav_user_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/bai_jamjuree_semi_bold"
                                        android:lines="1"
                                        android:maxLines="1"
                                        android:text="User Name "
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_15ssp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/_nav_mobile_no"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1.5"
                                            android:ellipsize="end"
                                            android:fontFamily="@font/bai_jamjuree_semi_bold"
                                            android:lines="1"
                                            android:maxLines="1"
                                            android:text="9999999999"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_9ssp" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/user_referral"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:padding="@dimen/_6ssp"
                                android:text="Referral Code : DACG8GH "
                                style="@style/edit_label"
                                android:textColor="@color/black" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:elevation="@dimen/_8sdp"
                        android:orientation="vertical">


                        <TextView
                            style="@style/edit_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12ssp"
                            android:layout_marginBottom="@dimen/dp5"
                            android:text="@string/alternative_mobile_no"
                            tools:text="@string/alternative_mobile_no" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/blue"
                            app:strokeWidth="@dimen/_1sdp">

                            <EditText
                                android:id="@+id/edit_phone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/edit_box"
                                style="@style/edit_text_m"
                                android:hint="@string/alternative_mobile_no"
                                android:inputType="phone"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:maxLength="10" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            style="@style/edit_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp5"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:text="@string/email"
                            tools:text="@string/email" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/blue"
                            app:strokeWidth="@dimen/_1sdp">

                            <EditText
                                android:id="@+id/edit_email"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/edit_box"
                                style="@style/edit_text_m"
                                android:hint="@string/email"
                                android:inputType="textEmailAddress"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:maxLength="10" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            style="@style/edit_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp5"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:text="@string/address"
                            tools:text="@string/address" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/blue"
                            app:strokeWidth="@dimen/_1sdp">

                            <EditText
                                android:id="@+id/edit_address"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/edit_box"
                                style="@style/edit_text_m"
                                android:hint="@string/enter_add"
                                android:inputType="text"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:maxLength="10" />
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_20sdp"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView6">

                            <TextView
                                android:id="@+id/btnSubmit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_1_1"
                                android:fontFamily="@font/bai_jamjuree_medium"
                                android:lines="1"
                                android:paddingHorizontal="@dimen/_25sdp"
                                android:paddingVertical="@dimen/_2sdp"
                                android:text="Submit"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp" />

                            <TextView
                                android:id="@+id/btnClose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/bai_jamjuree_medium"
                                android:lines="1"
                                android:paddingHorizontal="@dimen/_14sdp"
                                android:paddingVertical="@dimen/_2sdp"
                                android:text="@string/Close"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/_14ssp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>