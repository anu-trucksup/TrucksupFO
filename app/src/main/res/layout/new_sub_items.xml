<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_9sdp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="@dimen/_10sdp">


            <RelativeLayout
                android:id="@+id/mainCar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/subscribation_card_bg">

                <LinearLayout
                    android:id="@+id/main_cat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:background="@drawable/sub_unslect_card"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/planType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/bai_jamjuree_semi_bold"
                                android:gravity="center"
                                android:text="Premium"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/_17ssp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginTop="12dp"
                                android:layout_marginEnd="@dimen/_5sdp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/amount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/bai_jamjuree_medium"
                                        android:gravity="center"
                                        android:text="â‚¹ 1200"
                                        android:textColor="@color/blue"
                                        android:textSize="20dp" />

                                    <TextView
                                        android:id="@+id/amountDay"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/bai_jamjuree_medium"
                                        android:text="1200"
                                        android:textColor="@color/blue"
                                        android:textSize="14dp"
                                        android:visibility="gone" />
                                </LinearLayout>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/loads"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bai_jamjuree_bold"
                                android:gravity="center"
                                android:text="Loads 30"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/_11ssp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/days"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bai_jamjuree_medium"
                                android:gravity="center"
                                android:text="Validity for 30 days"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recomanded"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:background="@drawable/sub_recomanded">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2sdp"
            android:background="#FCE1FB"
            android:fontFamily="@font/bai_jamjuree_semi_bold"
            android:gravity="center"
            android:text="@string/recommended"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>