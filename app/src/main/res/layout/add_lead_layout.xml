<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/bai_jamjuree_bold"
            android:gravity="center"
            android:text="Add Business Associate"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_16ssp" />

        <LinearLayout
            android:id="@+id/contectName_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tt"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/bai_jamjuree_medium"
                android:text="Contact Name *"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/_12ssp" />

            <EditText
                android:id="@+id/contactName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/broker_search"
                android:fontFamily="@font/bai_jamjuree_medium"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:imeOptions="actionNext"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contectNo_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contectName_l"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/bai_jamjuree_medium"
                android:text="Contact Number *"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/_12ssp" />

            <EditText
                android:id="@+id/contactNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:background="@drawable/broker_search"
                android:fontFamily="@font/bai_jamjuree_medium"
                android:inputType="number"
                android:maxLength="10"
                android:imeOptions="actionNext"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/business_Name_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contectNo_l"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/bai_jamjuree_medium"
                android:text="Business Name *"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/_12ssp" />

            <EditText
                android:id="@+id/business_Name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/broker_search"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:fontFamily="@font/bai_jamjuree_medium"
                android:maxLines="1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/business_Address_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/business_Name_l"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/bai_jamjuree_medium"
                android:text="Business Address *"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/_12ssp" />

            <EditText
                android:id="@+id/company_Address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/broker_search"
                android:fontFamily="@font/bai_jamjuree_medium"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/city_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/bai_jamjuree_medium"
                android:text="City"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/_12ssp" />

            <EditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/broker_search"
                android:fontFamily="@font/bai_jamjuree_medium"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            app:cardBackgroundColor="#eee"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tvCurrentLocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/bai_jamjuree_medium"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_8sdp"
                    android:text="Location Address"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/_10sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        android:src="@drawable/map_navigate_icon" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addLeadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:paddingHorizontal="@dimen/_40sdp"
            android:fontFamily="@font/bai_jamjuree_medium"
            android:background="@drawable/background_1_1"
            android:paddingVertical="@dimen/_2sdp"
            />

        <TextView
            android:id="@+id/cancelLeadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel_u"
            android:textColor="@color/blue"
            android:textSize="@dimen/_14ssp"
            android:paddingHorizontal="@dimen/_14sdp"
            android:fontFamily="@font/bai_jamjuree_medium"
            android:paddingVertical="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_5sdp"
            />

    </LinearLayout>

    </LinearLayout>

</ScrollView>