<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect_header_profile"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/circal_weight"
                android:layout_centerVertical="true"
                android:onClick="onBack"
                android:padding="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/ic_back_icon" />

            <TextView
                style="@style/title_basicreg_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:text="@string/new_onboarding" />
        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_4sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_lay"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:elevation="@dimen/_8sdp"
                        android:background="@drawable/roal_slect_card"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/text_medium"
                            android:textColor="#861484"
                            android:layout_marginStart="@dimen/_12ssp"
                            android:text="@string/select_the_user_type_you_want_to_onboard"
                            />


                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:strokeColor="@color/ora_dark"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/ora_light"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:id="@+id/owner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:onClick="truck_supplier"
                                    android:padding="@dimen/_6sdp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="@dimen/_12sdp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/bai_jamjuree_semi_bold"
                                            android:layout_gravity="center"
                                            android:text="@string/truckSupplier"
                                            android:textColor="@color/black_23"
                                            android:textSize="@dimen/_15ssp"
                                            android:singleLine="true"
                                            />

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2.3"
                                        android:orientation="horizontal"
                                        android:paddingStart="@dimen/_10sdp">

                                        <ImageView
                                            android:layout_width="100dp"
                                            android:layout_height="73dp"
                                            android:padding="@dimen/_4sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:background="#00000000"
                                            android:src="@drawable/tw" />

                                    </RelativeLayout>


                                </LinearLayout>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>


                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:strokeColor="@color/ora_dark"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/ora_light"
                                android:onClick="slectBroker"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:id="@+id/broker"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_5sdp"
                                    android:onClick="business_associate"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="@dimen/_10sdp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/bai_jamjuree_semi_bold"
                                            android:layout_gravity="center"
                                            android:text="@string/broker_new"
                                            android:textColor="@color/black_23"
                                            android:textSize="@dimen/_15ssp"
                                            android:singleLine="true"/>


                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2.3"
                                        android:orientation="horizontal"
                                        android:paddingStart="@dimen/_10sdp">

                                        <ImageView
                                            android:layout_width="80dp"
                                            android:layout_height="71dp"
                                            android:scaleType="fitXY"
                                            android:padding="@dimen/_4sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_marginEnd="@dimen/_4sdp"
                                            android:background="#00000000"
                                            android:src="@drawable/ba_ic" />

                                    </RelativeLayout>

                                </LinearLayout>


                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>


                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:strokeColor="@color/ora_dark"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/ora_light"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:id="@+id/buyerSellor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:onClick="growth_partner"
                                    android:padding="@dimen/_6sdp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="@dimen/_12sdp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/bai_jamjuree_semi_bold"
                                            android:gravity="center_vertical"
                                            android:layout_gravity="center"
                                            android:text="@string/growthpartner"
                                            android:textColor="@color/black_23"
                                            android:textSize="@dimen/_15ssp"
                                            android:singleLine="true"/>

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:layout_weight="2.3"
                                        android:orientation="horizontal"
                                        android:paddingStart="@dimen/_10sdp">

                                        <ImageView
                                            android:layout_width="70dp"
                                            android:layout_height="70dp"
                                            android:scaleType="fitXY"
                                            android:padding="@dimen/_4sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_marginEnd="@dimen/_4sdp"
                                            android:background="#00000000"
                                            android:src="@drawable/growth_part" />

                                    </RelativeLayout>

                                </LinearLayout>


                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>


                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:strokeColor="@color/ora_dark"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/ora_light"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:id="@+id/ll_miscelleneous"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:onClick="growth_partner"
                                    android:padding="@dimen/_6sdp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="@dimen/_12sdp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/bai_jamjuree_semi_bold"
                                            android:gravity="center_vertical"
                                            android:layout_gravity="center"
                                            android:text="@string/misc"
                                            android:textColor="@color/black_23"
                                            android:textSize="@dimen/_15ssp"
                                            android:singleLine="true"/>

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2.3"
                                        android:orientation="horizontal"
                                        android:paddingStart="@dimen/_10sdp">

                                        <ImageView
                                            android:layout_width="70dp"
                                            android:layout_height="70dp"
                                            android:scaleType="fitXY"
                                            android:padding="@dimen/_4sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_marginEnd="@dimen/_4sdp"
                                            android:background="#00000000"
                                            android:src="@drawable/growth_part" />

                                    </RelativeLayout>

                                </LinearLayout>


                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>