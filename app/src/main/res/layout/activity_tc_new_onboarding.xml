<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context=".activity.TC_NewOnboardingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/GPOnboarding_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/TC_backBtn"
                layout="@layout/app_toolbar"/>

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/GPOnboarding_toolbar"
            tools:context=".activity.BAFollowUpActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_32sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/bai_jamjuree_semi_bold"
                    android:text="@string/TcNewOnboardingTab"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/_12ssp" />

                <!--<EditText
                    android:id="@+id/et_input_pass"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="56dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize="13sp"
                    android:background="@android:color/transparent"
                    android:theme="@style/MyEditText" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/bai_jamjuree_medium"
                        android:text="@string/ContactName_star"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_12ssp" />

                    <android.inputmethodservice.ExtractEditText
                        android:id="@+id/ETAccountHolderName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/grey_edit_background"
                        android:fontFamily="@font/bai_jamjuree_medium"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text=""
                        android:textSize="@dimen/_12ssp"
                        android:singleLine="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/bai_jamjuree_medium"
                        android:lines="1"
                        android:text="@string/ContactNumber_star"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/ETAccountHolderNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/grey_edit_background"
                        android:fontFamily="@font/bai_jamjuree_medium"
                        android:lines="1"
                        android:inputType="phone"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text=""
                        android:textSize="@dimen/_12ssp"
                        android:maxLength="10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/bai_jamjuree_medium"
                        android:lines="1"
                        android:text="@string/BusinessName_star"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/ETBusinessName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/grey_edit_background"
                        android:fontFamily="@font/bai_jamjuree_medium"
                        android:inputType="text"
                        android:lines="1"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text=""
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/bai_jamjuree_medium"
                        android:lines="1"
                        android:text="@string/BusinessAddress_star"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/ETBusinessAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/grey_edit_background"
                        android:fontFamily="@font/bai_jamjuree_medium"
                        android:inputType="text"
                        android:lines="1"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text=""
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/bai_jamjuree_medium"
                        android:lines="1"
                        android:text="@string/Pincode_star"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/ETPincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/grey_edit_background"
                        android:fontFamily="@font/bai_jamjuree_medium"
                        android:inputType="phone"
                        android:lines="1"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text=""
                        android:textSize="@dimen/_12ssp"
                        android:maxLength="6"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/bai_jamjuree_medium"
                        android:lines="1"
                        android:text="@string/City_star"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/ETcity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/grey_edit_background"
                        android:fontFamily="@font/bai_jamjuree_medium"
                        android:inputType="text"
                        android:lines="1"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text=""
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/bai_jamjuree_medium"
                        android:lines="1"
                        android:text="@string/State_star"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/ETState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/grey_edit_background"
                        android:fontFamily="@font/bai_jamjuree_medium"
                        android:inputType="phone"
                        android:lines="1"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text=""
                        android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cbCheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bai_jamjuree_medium"
                            app:buttonTint="@color/blue"
                            android:text="@string/SameCurrentLocation"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6">

                    <TextView
                        android:id="@+id/btnAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_1_1"
                        android:fontFamily="@font/bai_jamjuree_medium"
                        android:lines="1"
                        android:paddingHorizontal="@dimen/_25sdp"
                        android:paddingVertical="@dimen/_2sdp"
                        android:text="@string/add"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_6sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6">

                    <TextView
                        android:id="@+id/btnCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bai_jamjuree_medium"
                        android:lines="1"
                        android:paddingHorizontal="@dimen/_25sdp"
                        android:paddingVertical="@dimen/_2sdp"
                        android:text="@string/cancel_u"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_14ssp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
