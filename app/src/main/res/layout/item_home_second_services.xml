<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_4sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_5sdp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp">

        <ImageButton
            android:id="@+id/rvSecondServicesImg"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_horizontal"
            android:background="#00ffffff"
            android:src="@drawable/truck_img" />

        <TextView
            android:id="@+id/rvSecondServicesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bai_jamjuree_bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_1sdp"
            android:text="Truck Suppliers"
            android:textColor="@color/dark_gray"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/rvSecondServicesCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bai_jamjuree_semi_bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_1sdp"
            android:text="10"
            android:textColor="@color/blue"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/_12sdp" />


    </LinearLayout>


</androidx.cardview.widget.CardView>