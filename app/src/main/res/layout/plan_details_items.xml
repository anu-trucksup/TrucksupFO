<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FCC0E5"
    app:cardElevation="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_12sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_1sdp"
        android:background="@drawable/sub_details_bg"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:id="@+id/icon"
                    android:src="@drawable/verified_icon_16"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/bai_jamjuree_semi_bold"
                    android:id="@+id/planText"
                    android:text="Load posting"
                    android:textColor="#870583"
                    android:textSize="@dimen/_13ssp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/planDis"
                android:drawableStart="@drawable/verified_icon_16"
                android:drawableTint="@color/transparent"
                android:drawablePadding="8dp"
                android:fontFamily="@font/bai_jamjuree_semi_bold"
                android:text="You can access the verified loads without
any restrictions."
                android:textColor="@color/blue"
                android:textSize="11dp" />
        </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5">
                 <ImageView
                     android:layout_width="@dimen/_30sdp"
                     android:layout_height="@dimen/_30sdp"
                     android:id="@+id/image"
                     android:layout_centerInParent="true"
                     android:src="@drawable/truck_menu_icon"
                     android:scaleType="fitXY"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:visibility="invisible"
            android:id="@+id/hideLayot"
            android:background="#59B4B4B4"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:tint="#BB0921"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:src="@drawable/lock_icon_16"
                            tools:ignore="UseAppTint" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:drawablePadding="8dp"
                            android:visibility="invisible"
                            android:fontFamily="@font/bai_jamjuree_semi_bold"
                            android:id="@+id/planText_1"
                            android:text="Load posting"
                            android:textColor="#870583"
                            android:textSize="@dimen/_13ssp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/planDis_1"
                        android:drawableStart="@drawable/verified_icon_16"
                        android:drawableTint="@color/transparent"
                        android:drawablePadding="8dp"
                        android:visibility="invisible"
                        android:fontFamily="@font/bai_jamjuree_semi_bold"
                        android:text="You can access the verified loads without
any restrictions."
                        android:textColor="@color/blue"
                        android:textSize="11dp" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5">
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:src="@mipmap/free_image"
            android:scaleType="fitXY"
            android:id="@+id/freeImage"
            android:layout_height="@dimen/_30sdp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>