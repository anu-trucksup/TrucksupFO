<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:id="@+id/deActiveLayout"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_8sdp"
        app:strokeWidth="1dp"
        app:strokeColor="#B6B3B1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@mipmap/vehical_ic_tracking"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:id="@+id/vehicalOne"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/bai_jamjuree_semi_bold"
                        android:text="23456789"
                        android:textColor="#585858"
                        android:drawableEnd="@drawable/arrow_up_right_icon"/>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_height="wrap_content">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_11ssp"
                            android:id="@+id/st1"
                            android:fontFamily="@font/bai_jamjuree_semi_bold"
                            android:text="@string/status"
                            android:textColor="#585858" />
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:strokeColor="@color/blue"
                            android:layout_toEndOf="@+id/st1"
                            app:strokeWidth="0dp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:layout_centerHorizontal="true"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardElevation="3dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:background="@color/tr_red_50"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_11ssp"
                                android:fontFamily="@font/bai_jamjuree_semi_bold"
                                android:text="@string/pending"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:textColor="@color/red" />
                        </com.google.android.material.card.MaterialCardView>
                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:strokeColor="@color/blue"
                            app:strokeWidth="1dp"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardElevation="0dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_11ssp"
                                android:fontFamily="@font/bai_jamjuree_semi_bold"
                                android:text="@string/resendConsent"
                                android:id="@+id/sendConsent"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_3sdp"
                                android:textColor="#585858" />
                        </com.google.android.material.card.MaterialCardView>



                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6">


                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:strokeColor="@color/blue"
                            app:strokeWidth="1dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardElevation="0dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_11ssp"
                                android:fontFamily="@font/bai_jamjuree_semi_bold"
                                android:text="@string/trip"
                                android:id="@+id/btTrip_one"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_3sdp"
                                android:textColor="@color/primery_text"
                                android:drawableEnd="@drawable/map_pin_17"
                                android:drawableTint="@color/green"
                                android:drawablePadding="@dimen/_4sdp"/>
                        </com.google.android.material.card.MaterialCardView>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:id="@+id/activeLayout"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_8sdp"
        app:strokeWidth="1dp"
        app:strokeColor="#B6B3B1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@mipmap/vehical_ic_tracking"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:textSize="@dimen/_11ssp"
                            android:id="@+id/vehicalTwo"
                            android:fontFamily="@font/bai_jamjuree_semi_bold"
                            android:text="23456789"
                            android:textColor="#585858"
                            android:drawableEnd="@drawable/arrow_up_right_icon"/>

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_height="wrap_content">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_11ssp"
                            android:id="@+id/st"
                            android:fontFamily="@font/bai_jamjuree_semi_bold"
                            android:text="@string/status"
                            android:textColor="#585858" />
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:strokeColor="@color/blue"
                            android:layout_toEndOf="@+id/st"
                            app:strokeWidth="0dp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:layout_centerHorizontal="true"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardElevation="3dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:background="@color/green_tr_45"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_11ssp"
                                android:fontFamily="@font/bai_jamjuree_semi_bold"
                                android:text="@string/active"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:textColor="@color/green" />
                        </com.google.android.material.card.MaterialCardView>
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_28sdp"
                            android:textSize="@dimen/_10ssp"
                            android:id="@+id/date"
                            android:fontFamily="@font/bai_jamjuree_semi_bold"
                            android:text="15 Aug’2024 / 3h 22 min"
                            android:textColor="#585858" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:strokeColor="@color/blue"
                            app:strokeWidth="1dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_1sdp"
                           android:layout_marginStart="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardElevation="0dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_11ssp"
                                android:fontFamily="@font/bai_jamjuree_semi_bold"
                                android:text="@string/trip"
                                android:id="@+id/btTrip"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_3sdp"
                                android:textColor="@color/primery_text"
                                android:drawableEnd="@drawable/map_pin_17"
                                android:drawableTint="@color/green"
                                android:drawablePadding="@dimen/_4sdp"/>
                        </com.google.android.material.card.MaterialCardView>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>