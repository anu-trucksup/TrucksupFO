<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FieldOfficer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="android:font">@font/bai_jamjuree_regular</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textDirection">locale</item>


    </style>

    <style name="Theme.FieldOfficer" parent="Base.Theme.FieldOfficer">
        <item name="android:statusBarColor">@color/theme_color</item>
    </style>

    <style name="timePickerOrange">
